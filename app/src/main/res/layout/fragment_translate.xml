<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:background="@color/page_background"
                  android:paddingBottom="48.0dip"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
        <View android:background="@color/layout_background"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/statusbar_view_height"/>
        <include layout="@layout/actionbar_translate"/>
        <RelativeLayout android:background="@drawable/border_topbar_white"
                        android:layout_width="match_parent"
                        android:layout_height="170.0dip">
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/uiEditText"
                    android:textSize="@dimen/txt_L1_english"
                    android:textColor="@color/txt_L1"
                    android:textColorHint="@color/txt_disabled"
                    android:gravity="top"
                    android:background="@null"
                    android:padding="@dimen/page_margin_default"
                    android:longClickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="@string/translationEditHint"
                    android:maxLines="40"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="2.0dip"
                    android:inputType="textMultiLine"/>
            <ImageView
                    android:id="@+id/uiImageViewClear"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/page_margin_default"
                    android:src="@drawable/ico_clear"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal"
                      android:background="@color/white"
                      android:padding="@dimen/page_margin_L1"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">
                <TextView
                        android:id="@+id/uiTextViewTranslateVoice"
                        android:textSize="14.0sp"
                        android:textColor="@color/translateVoiceTextColor"
                        android:gravity="center"
                        android:background="@drawable/shape_voice_translate_entry"
                        android:paddingLeft="20.0dip"
                        android:paddingTop="10.0dip"
                        android:paddingRight="20.0dip"
                        android:paddingBottom="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/translateVoice"
                        android:drawableLeft="@drawable/microphone_small"
                        android:drawablePadding="5.0dip"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">
                <TextView

                        android:id="@+id/uiTextViewTranslatePhoto"
                        android:textSize="14.0sp"
                        android:textColor="@color/translateVoiceTextColor"
                        android:gravity="center"
                        android:background="@drawable/shape_voice_translate_entry"
                        android:paddingLeft="20.0dip"
                        android:paddingTop="10.0dip"
                        android:paddingRight="20.0dip"
                        android:paddingBottom="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/translatePhoto"
                        android:drawableLeft="@drawable/photo_translate_icon"
                        android:drawablePadding="5.0dip"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

        <View android:background="#ffebebeb"
              android:layout_width="fill_parent"
              android:layout_height="0.5dip"/>
        <LinearLayout android:layout_gravity="center_horizontal"
                      android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:background="@drawable/border_topbar_white"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/page_margin_default"
                      android:layout_marginTop="@dimen/page_margin_default"
                      android:layout_marginRight="@dimen/page_margin_default"
                      android:layout_marginBottom="@dimen/page_margin_L2"
                      android:minHeight="100.0dip">
            <ScrollView android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/txt_L1_chinese"
                              android:textColor="@color/sentenceHistoryColor"
                              android:id="@+id/uiTextViewHeader"
                              android:background="@color/white"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/page_margin_default"
                              android:layout_marginTop="@dimen/page_margin_default"
                              android:text="@string/translationResultTitle"
                              android:lineSpacingExtra="6.0dip"/>
                    <TextView android:textSize="@dimen/txt_L1_chinese"
                              android:textColor="@color/txt_L1"
                              android:id="@+id/uiTextViewTranslateResult"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/page_margin_default"
                              android:layout_marginTop="@dimen/page_margin_L2"
                              android:layout_marginRight="@dimen/page_margin_default"
                              android:lineSpacingExtra="@dimen/page_margin_L4"
                              android:textIsSelectable="true"/>
                    <View android:background="@color/line_dotted"
                          android:layout_width="fill_parent"
                          android:layout_height="0.5dip"/>
                    <RelativeLayout android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/page_margin_L1"
                                    android:layout_marginBottom="@dimen/page_margin_L1">
                        <ImageView
                                android:id="@+id/uiImageViewTranslateShare"
                                android:padding="8.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/page_margin_default"
                                android:src="@drawable/voice_translate_share"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                        <ImageView android:padding="8.0dip"
                                   android:id="@+id/uiImageViewTranslateMagnify"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/voice_translate_magnify"
                                   android:layout_toLeftOf="@id/uiImageViewTranslateShare"/>
                        <ImageView android:id="@+id/uiImageViewTranslateVoiceCopy"
                                   android:padding="8.0dip"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/voice_translate_copy"
                                   android:layout_toLeftOf="@id/uiImageViewTranslateMagnify"
                                   android:layout_centerVertical="true"/>
                        <ImageView android:id="@+id/uiImageViewTranslateVoice"
                                   android:padding="8.0dip"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/voice_translate_voice"
                                   android:layout_toLeftOf="@id/uiImageViewTranslateVoiceCopy"
                                   android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View android:background="@color/page_background"
                          android:layout_width="fill_parent"
                          android:layout_height="100.0dip"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>